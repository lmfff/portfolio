---
import HeaderLink from './HeaderLink.astro';
---

<header class="relative m-0 p-4">
	<nav class="flex items-center justify-center gap-4 md:gap-2">
		<div class="flex gap-2 md:gap-1">
			<HeaderLink href="/"><span role="img" aria-label="Home">🏠</span> Home</HeaderLink>
			<HeaderLink href="/about"><span role="img" aria-label="About">👨‍💻</span> About me</HeaderLink>
		</div>
	</nav>
</header>
<style>
	nav a {
		padding: 0.5em 0.5em;
		color: var(--nav-link-color);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	@media (max-width: 720px) {
		nav a {
			padding: 0.5em 0.25em;
		}
	}
</style>
